{
  "name": "expo-sqlite-job-queue",
  "version": "1.5.3",
  "description": "An SQLite based job queue for Expo",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "expo-job-queue.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "url": "https://github.com/pickupp-dev/expo-sqlite-job-queue"
  },
  "author": "Cas Chan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pickupp-dev/expo-sqlite-job-queue/issues"
  },
  "homepage": "https://github.com/pickupp-dev/expo-sqlite-job-queue#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/jest": "^26.0.0",
    "@types/react": "~19.1.10",
    "@types/react-native": "0.62.13",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "commitlint": "^11.0.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-ft-flow": "^3.0.11",
    "eslint-plugin-jest": "^28.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "hermes-eslint": "^0.32.0",
    "husky": "^4.2.5",
    "jest": "~29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-builder-bob": "^0.17.1",
    "release-it": "^14.2.2",
    "typescript": "~5.9.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-native",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "env": {
      "react-native/react-native": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "printWidth": 100,
          "semi": false,
          "singleQuote": false,
          "trailingComma": "all"
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-empty-object-type": "warn",
      "react-native/no-unused-styles": "error",
      "react-native/split-platform-components": "error",
      "react-native/no-inline-styles": "warn"
    },
    "overrides": [
      {
        "files": [
          "*.js",
          "**/*.config.js",
          "scripts/*.js"
        ],
        "rules": {
          "@typescript-eslint/no-require-imports": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "date-fns": "^2.21.3",
    "expo": "^54.0.8",
    "expo-sqlite": "~16.0.8"
  }
}
